<body class="container-fluid">

    <div class="row">
        <div class="col-1">
            <div id="sideBar"></div>
            <img id="title" src="/icons/Group 11.png" width="700px"></img>       
        </div> 
        <div class="col-1 offset-6" style="transform: translate(152px,60px);">
            <img src="/icons/selecempTitle.png" width="500px" alt=""> 
