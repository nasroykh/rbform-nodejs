                </tr>
                <tr>
                    <th>Département</th>
                    <td>  
                        <div id="depselect" class="d-flex"><%=dirs[0].intitule_dep%></div>
                    </td>
                </tr>
                <tr>
                    <th>Service</th>
                    <td id="svcselecttd"> 
                        <select name="svcpicker" id="svcselect">
                            <option value="">...</option>
